<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.br.dotter.beep"
        version   = "1.0.0">
    <name>BEEP</name>

    <description>
        Baby Beep.
    </description>

    <author href="http://www.dotter.com.br" email="eduardo@dotter.com.br">
        Dotter do Brasil Ltda
    </author>

    <gap:plugin name="com.phonegap.plugins.barcodescanner"/>
	
    

	<plugin name="cordova-plugin-device" />
	
    <gap:plugin name="org.apache.cordova.media" />

    <gap:plugin name="com.cordova.plugins.sms" version="0.1.2" />


    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<access origin="*"/>
	<allow-navigation href="*" />
	<allow-intent href="*" />

    <gap:plugin name="hu.dpal.phonegap.plugins.contactnumberpicker" version="0.1.1" />

    <gap:plugin name="org.apache.cordova.geolocation" />
	
	<gap:plugin name="org.apache.cordova.battery-status" />
	
	<gap:plugin name="com.colibrisoftware.plugins.backgroundjs" version="3.3" />
	
	<plugin name="de.appplant.cordova.plugin.background-mode" spec="0.5.0" source="pgb" />
	
	<gap:plugin name="cordova-plugin-bluetoothle" source="npm" />
	
	<plugin name="de.appplant.cordova.plugin.local-notification"/>

	<plugin name="de.appplant.cordova.common.registerusernotificationsettings" source="pgb" />
	
	<gap:plugin name="org.apache.cordova.device-motion" version="0.1.0" />
			
	<preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />
	
	<preference name="android-build-tool" value="gradle" />

    <icon src="icon.png" />
    <gap:splash src="logo.png" />
	
	<gap:config-file platform="ios" parent="UIBackgroundModes" overwrite="true">
		<array>
			<string>location</string>
		</array>
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UIRequiredDeviceCapabilities" overwrite="true">
		<array>
			<string>accelerometer</string>
			<string>gps</string>
			<string>location-services</string>
			<string>bluetooth-le</string>
		</array>
	</gap:config-file>
	
	<feature name="BackgroundJS">
      <param name="ios-package" value="BackgroundJS" />
    </feature>


</widget>
