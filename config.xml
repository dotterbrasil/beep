<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.br.dotter.beep"
        version   = "1.0.0">
    <name>BEEP</name>

    <description>
        Baby Beep.
    </description>

    <author href="http://www.dotter.com.br" email="eduardo@dotter.com.br">
        Dotter do Brasil Ltda
    </author>
	
	<plugin name="com.colibrisoftware.plugins.backgroundjs" source="pgb" spec="3.3" />
	<plugin name="com.cordova.plugins.sms" source="pgb" spec="0.1.2" />
	<plugin name="com.phonegap.plugins.barcodescanner" source="pgb" spec="2.2.0" />
	<plugin name="cordova-background-geolocation-lt" />
	<plugin name="cordova-common-registerusernotificationsettings-mm" spec="1.0.1" />
	<plugin name="cordova-plugin-bluetoothle" spec="2.7.1" />
	<plugin name="cordova-plugin-device" />
	<plugin name="cordova-plugin-device-motion" source="pgb" spec="1.1.1" />
	<plugin name="cordova-plugin-local-notifications-mm" spec="1.0.1" />
	<plugin name="cordova-plugin-whitelist" spec="1.2.0" />
	<plugin name="de.appplant.cordova.plugin.background-mode" source="pgb" spec="0.6.4" />
	<plugin name="org.apache.cordova.battery-status" source="pgb" spec="0.2.12" />
	<plugin name="org.apache.cordova.geolocation" source="pgb" spec="0.3.12" />
	<plugin name="org.apache.cordova.media" source="pgb" spec="0.2.16" />

	<access origin="*"/>
	<allow-navigation href="*" />
	<allow-intent href="*" />

	<preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />
	
	<preference name="android-build-tool" value="gradle" />

    <icon src="icon.png" />
    <gap:splash src="logo.png" />
	
	 


</widget>
